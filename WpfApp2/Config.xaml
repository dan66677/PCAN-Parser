<Window x:Class="WpfApp2.Config"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Config" Height="450" Width="800">
    <Grid>
        <AccessText Text="Имя параметра" Width="200" Margin="30,15,570,0"/>
        <AccessText Text="Id параметра" Width="200" Margin="30,45,570,0"/>
        <AccessText Text="Байты (2,3)" Width="200" Margin="30,76,570,0"/>
        <TextBox x:Name="NameEntry"
                    Width="200" Margin="30,30,570,0" VerticalAlignment="Top" AutomationProperties.ItemType="{Binding Text, ElementName=NameEntry}"/>
        <TextBox x:Name="IdEntry"
                    Width="200" Margin="30,60,570,0" VerticalAlignment="Top"/>
        <TextBox 
                    Width="200" Margin="30,90,570,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
