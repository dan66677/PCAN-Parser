<Window x:Class="WpfApp2.ExcelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Excel Export" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <Button x:Name="ExportButton" Content="Экспорт в Excel" Click="ExportButton_Click" Margin="5" Padding="10,5"/>
            <ComboBox x:Name="ConfigComboBox" Width="200" Margin="5" DisplayMemberPath="Name"/>
            <Button Name="CreateNewFileButton" Content="Создать новый файл" Click="CreateNewFileButton_Click" Margin="5" Padding="10,5"/>
            <Button Name="SelectExcelFileButton" Content="Выбрать файл" Click="SelectExcelFileButton_Click" Margin="5" Padding="10,5"/>
            <TextBlock Name="SelectedFileTextBlock" Margin="5" FontSize="14" VerticalAlignment="Center"/>
        </StackPanel>

        <DataGrid x:Name="configDataGrid" Grid.Row="1" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="120"/>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                <DataGridTextColumn Header="Множитель" Binding="{Binding Multiplier}" Width="80"/>
                <DataGridTextColumn Header="Делитель" Binding="{Binding Divider}" Width="80"/>
                <DataGridTextColumn Header="Отступ" Binding="{Binding Indent}" Width="80"/>
                <DataGridTextColumn Header="Byte 0" Binding="{Binding Byte0}" Width="60"/>
                <DataGridTextColumn Header="Byte 1" Binding="{Binding Byte1}" Width="60"/>
                <DataGridTextColumn Header="Byte 2" Binding="{Binding Byte2}" Width="60"/>
                <DataGridTextColumn Header="Byte 3" Binding="{Binding Byte3}" Width="60"/>
                <DataGridTextColumn Header="Byte 4" Binding="{Binding Byte4}" Width="60"/>
                <DataGridTextColumn Header="Byte 5" Binding="{Binding Byte5}" Width="60"/>
                <DataGridTextColumn Header="Byte 6" Binding="{Binding Byte6}" Width="60"/>
                <DataGridTextColumn Header="Byte 7" Binding="{Binding Byte7}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="Готов к экспорту"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>

